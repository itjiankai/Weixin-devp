<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
  <servlet>
    <servlet-name>GetUserInfo</servlet-name>
    <display-name>This is the display name of my J2EE component</display-name>
    <description>This is the description of my J2EE component</description>
    <servlet-class>servlet.GetUserInfo</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ShowQRCodeServlet</servlet-name>
    <display-name>This is the display name of my J2EE component</display-name>
    <description>This is the description of my J2EE component</description>
    <servlet-class>servlet.ShowQRCodeServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>abc</servlet-name>
    <display-name>This is the display name of my J2EE component</display-name>
    <description>This is the description of my J2EE component</description>
    <servlet-class>servlet.abc</servlet-class>
  </servlet>



  <servlet-mapping>
    <servlet-name>GetUserInfo</servlet-name>
    <url-pattern>/servlet/GetUserInfo</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ShowQRCodeServlet</servlet-name>
    <url-pattern>/servlet/ShowQRCodeServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>abc</servlet-name>
    <url-pattern>/servlet/abc</url-pattern>
  </servlet-mapping>

</web-app>